<h2>{{tituloPagina}}</h2>


<form method="post" action="/exerc7">
    <p>Digite os dados abaixo:</p>

    <div>
        <input type="text" name="numero_horas_trabalhadas" placeholder="Número de horas : 50" />
        <input type="text" name="salario_hora" placeholder="Salário por hora : 50(reais)" />
    
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>

    {{#if erro}}
        <div class="alert alert-danger" role="alert">{{mensagemErro}}</div>
    {{else}}
        {{#if salario_final}}
        <div>
            <p><strong>Salário total é: </strong> R$ {{salario_final}}</p>
        </div>
        {{/if}}
    {{/if}}

</form>